    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.simpleprogram.User" table="users">
        <id name="id">
            <column name="id" sql-type="int(11)" />
            <generator class="identity"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100"/>
        </property>
        <component name="proteinData">

            <property name="total">
                <column name="total" sql-type="int(11)"/>
            </property>
            <property name="goal">
                <column name="goal" sql-type="int(11)"/>
            </property>
        </component>


        <list name="history" table="user_history" inverse="true" cascade="save-update">


            <key column="user_id"/>
            <list-index column="POSITION"/>
            <one-to-many class="com.simpleprogram.UserHistory"/>
        </list>

